{
    "version": 2,
    "name": "application-name",
    "builds": [
        {
            "src": "dxn_universal/wsgi.py",
            "use": "@ardnt/now-python-wsgi",
            "config": {
                "maxLambdaSize": "30mb"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "dxn_universal/wsgi.py"
        }
    ],
    "outputDirectory": "static"
}